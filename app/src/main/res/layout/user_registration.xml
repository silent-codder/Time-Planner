<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.UserRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/relative">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_basic"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_rawRes="@raw/basicinfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_below="@id/lottie_basic"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Name"
                android:background="@drawable/edit_txt_bg"
                android:layout_below="@id/txt"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Profession"
                android:background="@drawable/edit_txt_bg"
                android:layout_below="@id/first_name"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/birth_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Birth Date"
                android:textSize="16sp"
                android:background="@drawable/reminder_bg"
                android:layout_below="@id/profession"
                android:gravity="start"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:background="@drawable/edit_txt_bg"
                android:layout_below="@id/birth_date"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Create Password"
                android:background="@drawable/edit_txt_bg"
                android:layout_below="@id/email"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>


            <Button
                android:id="@+id/btn_register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_centerHorizontal="true"
                android:text="Register"
                android:background="@drawable/button_bg"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already User ? Login"
                android:layout_below="@id/btn_register"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>